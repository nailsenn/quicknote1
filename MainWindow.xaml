<Window x:Class="QN_Rewrite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        xmlns:local="clr-namespace:QN_Rewrite"
        mc:Ignorable="d"
        Title="MainWindow"
		WindowState="Maximized"
		WindowStyle="None"
		Background="Black"
		Width="1920"
		Height="1080">


	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>


		<Viewbox Grid.Column="0" Grid.Row="0">
			<TextBlock Text="dttfas"
			   Foreground="White"
			   x:Name="TextA"/>
		</Viewbox>

		<Viewbox Grid.Column="1" Grid.Row="0">
			<TextBlock Text="rdpsst"
			   Foreground="White"
			   x:Name="TextB"/>
		</Viewbox>

		<Viewbox Grid.Column="2" Grid.Row="0">
			<TextBlock Text="0"
			   Foreground="#b0ffbd"
			   x:Name="TextC"/>
		</Viewbox>


		<ProgressBar Grid.ColumnSpan="3" Grid.Row="0" Panel.ZIndex="-2"
					 Value="80"
					 Minimum="0"
					 Maximum="100"
					 BorderThickness="0"
					 Background="Transparent"
					 Foreground="#777777"
					 x:Name="ProgressBar"/>


		<Canvas Grid.ColumnSpan="3"
			  Grid.Row="0"
			  Panel.ZIndex="2"
			  x:Name="Markers">
		</Canvas>


		<Viewbox Grid.ColumnSpan="3" Grid.Row="1">
            <StackPanel x:Name="InputStack">
                <TextBox Background="Gray"
						 BorderThickness="0"
						 TextAlignment="Center"/>
                <TextBox Background="Black"
						 Foreground="White"
						 BorderThickness="0"
						 TextAlignment="Center"/>
                <Button Content="run"
						Background="Gray"
						BorderThickness="0"
						Click="Button_Click"/>
            </StackPanel>
        </Viewbox>


        <vlc:VideoView x:Name="VideoView"
                       Grid.Row="1"
                       Grid.ColumnSpan="3"
                       Visibility="Hidden"/>

        <!--WindowsFormsHost
			Grid.Row="1"
			Grid.ColumnSpan="3"
			Visibility="Hidden"
			x:Name="WFH">
			<wf:Panel x:Name="PlayerHost"/>
		</WindowsFormsHost-->
	</Grid>
</Window>